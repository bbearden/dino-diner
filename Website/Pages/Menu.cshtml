@page
@model Website.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>


<h2>Combos</h2>
<div id="combos-list">
    @for (int i = 0; i < Model.Menu.AvailableCombos.Count; i++)
    {
        <div class="menu-item">
            <h3 >@Model.Menu.AvailableCombos[i].ToString()</h3>
            <ul>
                <li>Price: $@Model.Menu.AvailableCombos[i].Price</li>
                <li>Calories: @Model.Menu.AvailableCombos[i].Calories</li>
                <li>Ingredients: @string.Join(", ", Model.Menu.AvailableCombos[i].Ingredients)</li>
            </ul>
        </div>
    }
</div>


